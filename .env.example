# MCP Development Environment Configuration Example
# =================================================
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=mcp-dev-environment
APP_VERSION=1.0.0
ENVIRONMENT=development

# Port Configuration (change if you have conflicts)
PYTHON_SERVER_PORT=8000
NODE_SERVER_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
NGINX_PORT=8080

# Debug Ports
PYTHON_DEBUG_PORT=5678
NODE_DEBUG_PORT=9229

# Python MCP Server Configuration
PYTHON_DEBUG=true
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Node.js MCP Server Configuration
NODE_ENV=development
DEBUG=*
NPM_CONFIG_LOGLEVEL=warn

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=mcp_dev
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=mcp_password
POSTGRES_MAX_CONNECTIONS=100

# Constructed Database URL
DATABASE_URL=postgresql://mcp_user:mcp_password@postgres:5432/mcp_dev

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://redis:6379

# Security Settings
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Performance Tuning
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_WORK_MEM=4MB
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Container Names (optional customization)
CONTAINER_PREFIX=mcp-dev

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_SQL_LOGGING=true
ENABLE_METRICS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Timezone
TZ=UTC

# Volume Paths (optional customization)
DATA_VOLUME=./data
STATIC_VOLUME=./static
LOG_VOLUME=./logs